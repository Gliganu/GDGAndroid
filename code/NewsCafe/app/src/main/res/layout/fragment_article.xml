<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context="com.gliga.newscafe.ui.ArticleFragment">

    <TextView
        android:id="@+id/info_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:lines="1"
        android:maxLines="1"
        android:gravity="center_horizontal"
        android:background="@drawable/touch_selector_search"
        android:textColor="@color/button_material_light"
        />

    <ListView
        android:id="@+id/article_list_view"
        style="@style/ArticleListStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"/>


</LinearLayout>
